rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'jpbates13@gmail.com';
    }

    // Publicly readable collections
    match /content/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /posts/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /projects/{docId} { allow read: if true; allow write: if isAdmin(); }
    match /resume/{docId} { allow read: if true; allow write: if isAdmin(); }
    
    // Private admin-only collections
    match /drafts/{docId} { allow read, write: if isAdmin(); }
    match /office-attendance/{userId} { allow read, write: if isAdmin(); }
    
    // Default fallback (Denies anything not explicitly listed above)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
